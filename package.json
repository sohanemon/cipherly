{
  "name": "cipherly",
  "version": "0.0.13",
  "description": "A lightweight, developer-friendly AES-GCM encryption library",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sohanemon/cipherly#readme",
  "bugs": {
    "url": "https://github.com/sohanemon/cipherly/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sohanemon/cipherly.git"
  },
  "author": "Sohan Emon <sohanemon@outlook.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "check": "biome check .",
    "fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "release": "npm run typecheck && npm run format && npm run fix && npm run build && bumpp && npm publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "tsdown": "^0.11.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
